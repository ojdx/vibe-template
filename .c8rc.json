{
  "all": true,
  "include": [
    "public-www/**/*.js",
    "scripts/**/*.js",
    "lib/**/*.js",
    "server.js"
  ],
  "exclude": [
    "node_modules/**",
    "test/**",
    "coverage/**",
    ".githooks/**",
    "server.js",
    "scripts/diagram-utils.js",
    "scripts/setup-wiki.sh",
    "scripts/cdk-wrapper.js",
    "scripts/configure-repo-settings.js",
    "scripts/get-config.js",
    "scripts/setup-template.js",
    "scripts/copy-to-template.sh",
    "infrastructure/**"
  ],
  "reporter": [
    "text",
    "lcov",
    "html"
  ],
  "check-coverage": false,
  "lines": 80,
  "functions": 80,
  "branches": 80
}